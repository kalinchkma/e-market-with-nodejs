<!-- header -->
<%- include('../includes/header') -%>
<section class="banner-section py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-3">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/images/slider-image/s1.jpg" class="slider-box d-block img-fluid w-100" alt="s1.jpg">
                  </div>
                  <div class="carousel-item">
                    <img src="/images/slider-image/s2.jpg" class="slider-box img-fluid w-100" alt="s1.jpg">
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
            </div>
            </div>
        </div>
    </div>
</section>
<!-- shop item -->
<section class="shop-item my-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <!--  -->
                  <% for (product of prods) {%>
                    <div class="col-md-4 my-2">
                        <div class="card w-100">
                            <img src="<%= product.imageUrl %>" class="card-img-top product-image" alt="product-images">
                            <div class="card-body">
                              <h5 class="card-title"><%= product.title %></h5>
                              <p class="card-text"><%= product.description %></p>
                              <p class="text-danger"><%= product.price %> $</p>
                              <a href="/product/<%= product.id %>" class="btn btn-dark text-light">Details</a>
                              <%- 
                                include('../includes/add-to-cart')
                              -%>
                            </div>
                        </div>
                    </div>
                 <% } %>
               
                    <!--  -->
                </div>
                   
                </div>
            </div>
        </div>
    </div>
</section>
<!-- footer -->
<%- include('../includes/footer') -%>


  